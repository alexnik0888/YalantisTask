<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    card_view:cardCornerRadius="@dimen/item_corners"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/item_title"
        style="@style/CardTvTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_address"
        style="@style/CardTvAddressStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_date"
        style="@style/CardTvDateStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        style="@style/CardSeparatorStyle"
        android:layout_width="@dimen/view_separator_width"
        android:layout_height="match_parent" />

    <ImageView
        style="@style/CardLikeIvStyle"
        android:src="@drawable/ic_like" />

    <TextView
        android:id="@+id/item_like_count"
        style="@style/CardsLikesTvStyle"/>

    <ImageView
        style="@style/CardPaperIvStyle"
        android:src="@drawable/ic_doc" />

</android.support.v7.widget.CardView>